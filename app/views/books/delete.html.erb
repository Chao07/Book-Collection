<%= link_to 'Back', books_path %>

<div> 
  <h2>"Book delete"</h2>
  <%= form_for(@book, :method => 'delete') do |f| %>

    <p>
      <strong>Are you sure you want to delete this book?</strong>
    </p>
    <p class="reference-name">Title: <%= f.object.title %></p>
    <div class="form-buttons">
      <%= f.submit("Delete Book") %>
    </div>
  <% end %>
</div>

